<div class="row" style="margin-top: 2%;">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">
        Registrar usuarios
      </div>
      <div class="card-body">
        <form class="" action="/users/sign-up" method="POST">
          <div class="form-group">
            <label for="">Nombre completo: </label>
            <input type="text" class="form-control" name="nombreUsuario" autocomplete="off" value="{{nombreUsuario}}">
          </div>
          <div class="form-group">
            <label for="">Correo electrónico: </label>
            <input type="email" class="form-control" name="correoUsuario" autocomplete="off" value="{{correoUsuario}}">
          </div>
          <div class="form-group">
            <label for="">Contraseña: </label>
            <input type="password" class="form-control" name="contraUsuario1" autocomplete="off" {{contraUsuario1}}>
          </div>
          <div class="form-group">
            <label for="">Confirmar contraseña:</label>
            <input type="password" class="form-control" name="contraUsuario2" autocomplete="off" {{contraUsuario2}}>
          </div>
          <input type="hidden" name="tipoUsuario" value="user1">
          <div class="form-group">
            <button class="btn btn-info btn-block" type="submit" name="agregarUsuario"><i class="fa fa-user-plus"></i> Aceptar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
