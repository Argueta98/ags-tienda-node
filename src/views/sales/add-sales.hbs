{{#each errors}}
  <div class="alert alert-danger alert-dismissible fade show" role="alert" style="margin-top:1%;">
    <strong>Alerta: </strong> {{text}}
    <button class="close" type="button" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
{{/each}}

<div class="col-md-6 mx-auto" style="margin-top:2%;">
  <div class="card">
    <div class="card-header bg-info">
      <h3>Nuevo producto</h3>
    </div>
    <div class="card-body">
      <form class="" action="/sales/add-sales" method="POST">
        <div class="form-group">
          <label for="">Producto: </label>
          <input type="text" name="nombreProducto" class="form-control" autofocus>
        </div>
        <div class="form-group">
          <label for="">Descripción:</label>
          <textarea name="descProducto" class="form-control"></textarea>
        </div>
        <div class="form-group">
          <label for="">Tipo producto:</label>
          <select name="tipoProducto" class="form-control">
            <option value="" disabled selected>Seleccione una opción...</option>
          	<option value="1">Desinfectante.</option>
          	<option value="2">Jabones de mano.</option>
          	<option value="3">Sanitizantes</option>
          </select>
        </div>
        <div class="form-group">
          <label for="">Cantidad: </label>
          <input type="number" name="cantProducto" class="form-control">
        </div>
        <div class="form-group">
          <label for="">Valor unitario: </label>
          <input type="text" name="valorProducto" class="form-control">
        </div>
        <div class="form-group">
          <button class="btn btn-info btn-block" type="submit" name="btnProducto"> Aceptar</button>
        </div>
      </form>
    </div>
  </div>
</div>
